<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editItemLinearLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Item"
        android:id="@+id/editItemTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:layout_marginLeft="2dp" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:id="@+id/namePrompt"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority:"
            android:id="@+id/priorityPrompt"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Cost:"
            android:id="@+id/currentCostPrompt"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Cost:"
            android:id="@+id/maxCostPrompt"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/showName"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editPriorityEditText"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editCurrentCostEditText"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editMaxCostEditText"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/finishEditButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />



</LinearLayout>