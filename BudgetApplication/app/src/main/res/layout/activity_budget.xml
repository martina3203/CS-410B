<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".budgetActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Budget Application"
            android:id="@+id/programNameText"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Entry Name:"
            android:id="@+id/entryNameText"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total Cost:"
            android:id="@+id/totalCostText"
            android:layout_row="1"
            android:layout_column="1" />

        <EditText
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryTextEdit1"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryCostEdit1"
            android:layout_row="2"
            android:layout_column="1" />

        <EditText
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryTextEdit2"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryCostEdit2"
            android:layout_row="3"
            android:layout_column="1" />

        <EditText
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryTextEdit3"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryCostEdit3"
            android:layout_row="4"
            android:layout_column="1" />

        <EditText
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryTextEdit4"
            android:layout_row="5"
            android:layout_column="0" />

        <EditText
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryCostEdit4"
            android:layout_row="5"
            android:layout_column="1" />

        <EditText
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryTextEdit5"
            android:layout_row="6"
            android:layout_column="0" />

        <EditText
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/entryCostEdit5"
            android:layout_row="6"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total Budget:"
            android:id="@+id/totalBudgetText"
            android:layout_row="16"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total Expenses:"
            android:id="@+id/totalExpenseText"
            android:layout_row="16"
            android:layout_column="1" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/totalBudgetEdit"
            android:layout_row="17"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/totalExpenseEdit"
            android:layout_row="17"
            android:layout_column="1" />

    </GridLayout>
</RelativeLayout>
