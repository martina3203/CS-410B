<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/newItemLinearLayout"
    android:weightSum="1"
    android:background="#ffddffd4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viewing Item"
        android:id="@+id/itemTitle"
        android:textAppearance="@color/abc_primary_text_disable_only_material_light"
        android:textSize="30sp"
        android:layout_marginLeft="2dp"
        android:gravity="center" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:id="@+id/namePrompt"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_row="0"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority:"
            android:id="@+id/priorityPrompt"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_row="1"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle:"
            android:id="@+id/aislePrompt"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_row="2"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Cost:"
            android:id="@+id/currentCostPrompt"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_row="3"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Max Cost:"
           android:id="@+id/maxCostPrompt"
           android:textSize="25sp"
           android:layout_marginTop="25dp"
           android:layout_column="0"
           android:layout_marginLeft="2dp"
           android:layout_row="4"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency:"
            android:id="@+id/frequencyPrompt"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_row="5"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/nameBox"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginTop="25dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/priorityBox"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginTop="25dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/aisleBox"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginTop="25dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/currentCostBox"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginTop="25dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/maxCostBox"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_marginTop="25dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/frequencyBox"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_marginTop="25dp"
            android:textSize="25sp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="@color/abc_primary_text_disable_only_material_light" />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.11">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/editButton"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:onClick="onEditItemClick"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/deleteButton"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:onClick="onDeleteClick"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

</LinearLayout>